{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Détail du produit</h1>

    <div class="container-fluid">
        <div class="row">
            <div class="col-5">
                <div class="row">
                    <div class="col-12">
                        <img src="default.jpg" class="product-img" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-6" style="text-align:right;font-size:25px">
                        <a href="{{ path('product_like', {'id': product.id}) }}"><i class=" fa fa-thumbs-up"></i></a>{{ product.likeCount }}
                    </div>
                    <div class="col-6" style="text-align:left;font-size:25px">
                        <a href="{{ path('product_dislike', {'id': product.id}) }}"><i class=" fa fa-thumbs-down"></i></a>{{ product.dislikeCount }}
                    </div>
                </div>
            </div>
            <div class="col-7">
                <div class="row">
                    <div class="col-12">
                        <h5>{{ product.reference }}</h5>
                        <h2>{{ product.name }}<h2>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <p>{{ product.description }}</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <p>Quantité en stock : {{ product.stock }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <a href="{{ path('product_index') }}">back to list</a>

{% endblock %}
